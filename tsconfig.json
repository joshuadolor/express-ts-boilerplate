{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": ".",
        "strictNullChecks": true,
        "removeComments": true,
        "paths": {
            "*": [
                "node_modules/*",
            ]
        },
    },
    "include": [
        "src/**/*",
        "src/*",
    ],
    skip
}
